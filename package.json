{
  "name": "my-app",
  "version": "0.2.0",
  "author": "Wirlley Delfino",
  "description": "React-TypeScript-Electron sample with Create React App and Electron Builder",
  "homepage": ".",
  "main": "build/electron/main.js",
  "dependencies": {
    "antd": "^4.17.3",
    "axios": "^0.24.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-updater": "^4.6.1",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "node-persist": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys": "^2.0.0",
    "react-input-mask": "^2.0.4",
    "react-intl-currency-input": "^0.2.6",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "socket.io-client": "^4.4.0",
    "styled-components": "^5.3.3",
    "styled-icons": "^10.45.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:build": "yarn build && tsc -p electron && electron-builder build --win --publish always",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.github.wirlleyd.github",
    "extends": null,
    "productName": "App",
    "publish": [
      {
        "provider": "github",
        "owner": "wirlleyd",
        "repo": "electron-react-typescript",
        "releaseType": "release"
      }
    ],
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      ".env"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^27.0.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^16.11.7",
    "@types/node-persist": "^3.1.2",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.17",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.0",
    "electron-builder": "22.10.5",
    "electron-reload": "^1.5.0",
    "eslint": "^8.4.1",
    "typescript": "^4.5.2",
    "wait-on": "^6.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}