{
  "name": "gestor-de-vendas",
  "version": "0.0.6",
  "author": "Amabest",
  "description": "Desktop app to manage a store",
  "homepage": ".",
  "main": "build/electron/main.js",
  "dependencies": {
    "antd": "^4.17.3",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-updater": "^4.6.1",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "node-abi": "^3.5.0",
    "node-cron": "^3.0.0",
    "node-fetch": "2.6.1",
    "node-persist": "^3.1.0",
    "node-thermal-printer": "^4.1.2",
    "printer": "git+https://github.com/tojocky/node-printer.git",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys": "^2.0.0",
    "react-input-mask": "^2.0.4",
    "react-intl-currency-input": "^0.2.6",
    "react-minimal-pie-chart": "^8.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "serialport": "^9.0.4",
    "socket.io-client": "^4.4.0",
    "styled-components": "^5.3.3",
    "styled-icons": "^10.45.0",
    "use-context-selector": "^1.3.9",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "dev:react": "cross-env BROWSER=none yarn start",
    "dev:electron": "tsc -p electron && electron .",
    "electron:build": "yarn build && tsc -p electron && electron-builder build --win --publish always",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.github.wirlleyd.github",
    "extends": null,
    "productName": "App",
    "publish": [
      {
        "provider": "github",
        "owner": "Amadelli-TheBestAcai",
        "repo": "thebestacai-gestor-de-vendas",
        "releaseType": "release"
      }
    ],
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.0.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^3.0.3",
    "@types/node-persist": "^3.1.2",
    "@types/printer": "^0.4.0",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/serialport": "^8.0.1",
    "@types/styled-components": "^5.1.17",
    "@types/uuid": "^8.3.3",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.0",
    "electron-builder": "22.10.5",
    "electron-reload": "^1.5.0",
    "eslint": "^8.4.1",
    "typescript": "^4.5.2",
    "wait-on": "^6.0.0"
  },
  "resolutions": {
    "node-abi": "^3.5.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
